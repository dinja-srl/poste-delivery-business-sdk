{
    "name": "dinja/poste-delivery-business-sdk",
    "description": "Unofficial PHP SDK for Poste Delivery Business Rest API services",
    "keywords": ["pdb", "Poste Delivery Business", "ecommerce", "logistics"],
    "type": "library",
    "license": "MIT",
    "autoload": {
        "files": [
            "helpers.php"
        ],
        "psr-4": {
            "Dinja\\PosteDeliveryBusinessSDK\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Beniamino Carriero",
            "email": "beniamino.carriero@dinja.it"
        }
    ],
    "scripts": {
        "test": "vendor/bin/phpunit",
        "phpcs": "vendor/bin/phpcs --extensions=php src tests"
    },
    "require": {
        "php": ">=5.4",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7"
    }
}
